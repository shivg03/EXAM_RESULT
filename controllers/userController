const Userdb = require('../models/UserModel')

const getUsers = async(req,res)=>{
    let users = await Userdb.findAll({});
    res.status(200).send(users)
}
var postUsers = async (req, res) => {
    var postData = req.body;
    if (postData.length > 1) {
      var data = await Userdb.bulkCreate(postData);
    } else {
      var data = await Userdb.create(postData);
    }
  
    res.status(200).json({ data: data });
  };

var patchUser = async (req, res) => {
    var updateData = req.body;
    const data = await Userdb.update(updateData, {
      where: {
        id: req.params.id,
      },
    });
    res.status(200).json({ data: data });
  };  

  var deleteUser = async (req, res) => {
    const data = await Userdb.destroy({
      where: {
        id: req.params.id,
      },
    });
    res.status(200).json({ data: data });
  };

module.exports = {
    getUsers,
    postUsers,
    patchUser,
    deleteUser
}